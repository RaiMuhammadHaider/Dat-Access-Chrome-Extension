{
  "manifest_version": 3,
  "name": "DAT Access",
  "version": "1.4.0",
  "description": "Receiver-only: minimal UI. Validates users via external GitHub list, merges cookies, and kill-switches on revocation.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "DAT Access"
  },
  "permissions": [
    "cookies",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.github.com/*",
    "https://github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}